<launch>

  <arg name="robot_name_1" default="catvehicle"/>
  <arg name="robot_name_2" default="catvehicle_static"/>

  <arg name="paused" default="false"/>
  <arg name="use_sim_time" default="true"/>
  <arg name="gui" default="true"/>
  <arg name="headless" default="false"/>
  <arg name="debug" default="false"/>

  <arg name="rviz_file" default="$(find overtaking_maneuver)/rviz/overtaking.rviz"/>
  <arg name="front_laser_points" default="true"/>
  <arg name="front_top_lidar_points" default="true"/>
  <arg name="velodyne_points" default="false"/>
  <arg name="camera_right" default="false"/>
  <arg name="camera_left" default="false"/>
  <arg name="init_pose" value="-x -20 -y 1 -z 0"/>
  <arg name="config_file" default="catvehicle_control.yaml"/>

  <rosparam param="/use_sim_time">$(arg use_sim_time)</rosparam>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find catvehicle)/worlds/small_city.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="$(arg paused)"/>
    <arg name="use_sim_time" value="$(arg use_sim_time)"/>
    <arg name="headless" value="$(arg headless)"/>
  </include>

  <group ns="$(arg robot_name_1)">

    <param name="robot_description"
           command="$(find xacro)/xacro --inorder '$(find catvehicle)/urdf/catvehicle_2_lidars.xacro' roboname:='$(arg robot_name_1)' front_laser_points:='$(arg front_laser_points)' front_top_lidar_points:='$(arg front_top_lidar_points)' velodyne_points:='$(arg velodyne_points)' camera_right:='$(arg camera_right)' camera_left:='$(arg camera_left)'" />

    <node name="urdf_spawner_$(arg robot_name_1)" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="$(arg init_pose) -urdf -model $(arg robot_name_1) -param robot_description"/>

  </group>

  <!--node pkg="rviz" type="rviz" name="rviz" args="-d $(arg rviz_file)"/-->

</launch>
